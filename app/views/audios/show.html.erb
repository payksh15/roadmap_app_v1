<%- model_class = Audio -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @audio.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bit_depth) %>:</strong></dt>
  <dd><%= @audio.bit_depth %></dd>
  <dt><strong><%= model_class.human_attribute_name(:genre_id) %>:</strong></dt>
  <dd><%= @audio.genre_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              audios_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_audio_path(@audio), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              audio_path(@audio),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
